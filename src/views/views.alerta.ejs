<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/alerta.css">
    <title>Usuario</title>
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar">
            <img src="/img/Trost_blanco.png" alt="Logo" class="logo">
            <div class="navbar-options">
                <select class="select" id="adminUsuario">
                    <option>Admin-usuario</option>
                    <option value="/usuario">Crear usuarios</option>
                </select>
                <select class="select" id="bodegas">
                    <option>Bodegas</option>
                    <option value="/crear_bodega">Crear Bodegas</option>
                    <option value="#">Seguimiento Bodega</option>
                </select>
                <select class="select" id="historial">
                    <option>Historial</option>
                    <option value="/historial">Lista de Historial</option>
                </select>
                <div class="notification">
                    <div class="bell-container">
                        <button class="bell" aria-label="Ver alertas">
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="content-segundario">
            <!-- Tabla -->
            <div class="cont-segun-formu">
                <div class="table-header">Filtro</div>

                <div class="filtro">
                    <input type="date" class="date" placeholder="Fecha">
                </div>

                <div class="table-row1-1">
                    <span>Historial De Alerta</span>
                </div>

                <div class="table-row1">
                    <span>Nombre</span>
                    <span>Producto SKU</span>
                    <span>Fecha</span>
                    <span>Acción</span>
                </div>
                <div class="table-row2">
                    <span>Nombre 1</span>
                    <span>SKU12345</span>
                    <span>2023-10-01</span>
                    <span class="table-row2-bot" type="button">
                        <img src="/img/borrar.png" alt="Borrar" class="borrar" href="#">
                    </span>
                </div>
                <div class="table-row2">
                    <span>Nombre 2</span>
                    <span>SKU67890</span>
                    <span>2023-10-02</span>
                    <span class="table-row2-bot" type="button">
                        <img src="/img/borrar.png" alt="Borrar" class="borrar" href="#">
                    </span>
                </div>
                <!-- Añadir más filas según sea necesario -->
            </div>
        </div>
    </div>
    <script src="/js/alertas.js"></script>
</body>
</html> 