<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/crear.usuario.css">
    <title>Usuario</title>
</head>

<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar">
            <img src="/img/Trost_blanco.png" alt="Logo" class="logo">
            <div class="navbar-options">
                <select class="select" id="adminUsuario">
                    <option>Admin-usuario</option>
                    <option value="/usuario">Crear usuarios</option>
                </select>
                <select class="select" id="bodegas">
                    <option>Bodegas</option>
                    <option value="/crear_bodega">Crear Bodegas</option>
                    <option value="/seguimiento">Seguimiento Bodega</option>
                </select>
                <select class="select" id="historial">
                    <option>Historial</option>
                    <option value="/historial">Lista de Historial</option>
                    <option value="/logistica">Producto en Logistica</option>
                </select>
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="content-segundario">
            <div class="escrito">
                <h2 class="h2">Crear Usuario</h2>
                <div class="cont-segun-list">
                    <!-- Formulario -->
                    <div class="cont-segun-list-for">
                        <input type="text" class="input" id="nombreUsuario" placeholder="Nombre de usuario" required>
                        
                        <div class="password-container">
                            <input type="password" placeholder="Ingrese su contraseña" class="input" id="contrasena" required>
                            <span class="toggle-password" onclick="togglePassword()">
                                <img src="img/cerrado.png" alt="Mostrar contraseña" id="toggle-icon">
                            </span>
                        </div>
                        
                        <input type="email" class="input" id="correo" placeholder="Correo electrónico" required>
                        
                        <select class="desple" id="bodega" required>
                            <option value="">Cargando bodegas...</option>
                        </select>
                        
                        <select class="desple" id="rol" required>
                            <option value="">Seleccione rol</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Operario">Operario</option>
                            <option value="Operario de Inyeccion">Operario de Inyeccion</option>
                            <option value="Logistica">Logistica</option>
                            <option value="ADMINISTRADOR">Administrador</option>
                        </select>
                        
                        <select class="desple" id="estado" required>
                            <option value="ACTIVO">Activo</option>
                            <option value="INACTIVO">Inactivo</option>
                        </select>
                        
                        <div class="cont-segun-list-bot">
                            <button type="button" class="button" id="btnGuardar">Guardar</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Tabla -->
            <div class="cont-segun-formu">
                <div class="table-header">Lista de Usuarios</div>
                <div class="table-row1">
                    <span>Nombre</span>
                    <span>Rol</span>
                    <span>Bodega</span>
                    <span>Accion</span>
                </div>
                <!-- Las filas de usuarios se insertarán aquí dinámicamente -->
                
                <!-- Paginación -->
                <div class="pagination-controls">
                    <button id="prev-page" class="pagination-button">Anterior</button>
                    <span id="page-info">Página 1</span>
                    <button id="next-page" class="pagination-button">Siguiente</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/crear.usuarios.js"></script>
</body>

</html>