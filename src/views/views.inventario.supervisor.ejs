<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Inventario Supervisor</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/inventario.supervisor.css">
</head>
<body>

  <!-- Header superior -->
  <header class="top-header">
    <div class="logo-container">
      <img src="/img/Trost_blanco.png" alt="Trost" class="logo">
      <h1>Gestión de Inventario</h1>
    </div>

    <div class="user-profile">
      <div class="user-info">
        <span class="user-name" id="currentUserName">Nombre Usuario</span>
        <span class="user-role" id="currentUserRole">Supervisor</span>
      </div>
      <div class="user-avatar">
        <i class="fas fa-user-circle"></i>
      </div>
    </div>
  </header>

  <!-- Navegación horizontal -->
  <nav class="top-nav">
    <button class="nav-btn active" data-ruta="/inventario_supervisor">
      <i class="fas fa-search"></i> Consultar Inventario
    </button>
    <button class="nav-btn" data-ruta="/sesion">
      <i class="fas fa-sign-in-alt"></i> Iniciar Sesión Escaneo
    </button>
    <button class="nav-btn accent" data-ruta="/supervisor">
      <i class="fas fa-exchange-alt"></i> Transferencia
    </button>
  </nav>

  <!-- Contenido principal -->
  <main class="main-content">
    <div class="content-container">
      <section class="inventory-section card">
        <div class="section-header">
          <h2><i class="fas fa-warehouse"></i> Inventario por Bodega</h2>
        </div>

        <div class="inventory-controls">
          <div class="form-group">
            <label>Bodega</label>
            <div class="select-wrapper">
              <select id="nombre_bodega" class="form-control">
                <option value="">-- Todas las bodegas --</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label>Código</label>
            <input type="text" id="codigo_busqueda" class="form-control" placeholder="Ej: ABC123XL">
          </div>

          <button class="btn-search" onclick="consultarInventario()">
            <i class="fas fa-search"></i> Buscar
          </button>
        </div>

        <div class="table-container">
          <table id="tablaInventario" class="data-table">
            <thead>
              <tr>
                <th>Bodega</th>
                <th>Código</th>
                <th>Talla</th>
                <th>Característica</th>
                <th>Disponible</th>
                <th>Últ. Act.</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>

          <div id="empty-state" class="empty-state">
            <i class="fas fa-box-open"></i>
            <p>presione Buscar</p>
          </div>
        </div>

        <div id="mensajeInventario" class="message"></div>
      </section>
    </div>
  </main>

  <script src="/js/inventario.supervisor.js"></script>
</body>
</html>