<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <link rel="stylesheet" href="/css/inventario.inicial.css" />

  <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>

  <title>Inventario</title>
</head>

<body>
  <div class="app">

    <!-- HEADER -->
    <header class="topbar">
      <img src="/img/Trost_blanco.png" class="logo" />
      <h1>Toma de Inventario</h1>
    </header>

    <!-- CONTENIDO -->
    <main class="dashboard">

      <!-- FORMULARIO -->
      <section class="card form-card">
        <h2>Datos del Conteo</h2>

        <div class="form-grid">

          <select class="input" id="usuarioSelect">
            <option value="">游논 Pareja</option>
            <option value="1">Pareja 1</option>
            <option value="2">Pareja 2</option>
            <option value="3">Pareja 3</option>
            <option value="4">Pareja 4</option>
            <option value="5">Pareja 5</option>
            <option value="6">Pareja 6</option>
            <option value="7">Pareja 7</option>
            <option value="8">Pareja 8</option>
            <option value="9">Pareja 9</option>
            <option value="10">Pareja 10</option>
            <option value="11">Pareja 11</option>
            <option value="12">Pareja 12</option>
          </select>

          <select class="input" id="conteoSelect">
            <option value="">游대 Conteo</option>
            <option value="1">Conteo 1</option>
            <option value="2">Conteo 2</option>
            <option value="3">Conteo 3</option>
          </select>

          <select class="input" id="BodegaSelect">
            <option value="">游닍 Zona</option>
            <option>Terceros</option>
            <option>Oficina</option>
            <option>Mezanini</option>
            <option>Pecera</option>
            <option>Prendas</option>
            <option>Estanteria_lado_A</option>
            <option>Estanteria_lado_B</option>
            <option>Estanteria_lado_C</option>
          </select>

          <input
            type="text"
            class="input highlight"
            id="codigo_producto"
            placeholder="游닞 Escanea el c칩digo del producto"
            autocomplete="off"
          />

          <input
            type="number"
            class="input"
            id="cantidad_producto"
            placeholder="Cantidad"
            min="1"
          />
        </div>

        <button class="btn-primary" id="mover-productos">
          <i class="fa-solid fa-file-excel"></i> Exportar a Excel
        </button>
      </section>

      <!-- TABLA -->
      <section class="card table-card">
        <div class="table-header">
          <h2>Productos Registrados</h2>
          <span class="contador">
            Total 칰nicos: <strong id="totalProductos">0</strong>
          </span>
        </div>

        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>Pareja</th>
                <th>Conteo</th>
                <th>Zona</th>
                <th>C칩digo</th>
                <th>Talla</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody id="tablaProductos"></tbody>
          </table>
        </div>
      </section>

    </main>
  </div>

  <!-- JS SIN MODIFICAR -->
  <script src="/js/inventario.inicial.js"></script>
</body>
</html>
