<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/seguimiento.css">
    <title>Usuario</title>
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar">
            <img src="/img/Trost_blanco.png" alt="Logo" class="logo">
            <div class="navbar-options">
                <select class="select">
                    <option>Admin-usuario</option>
                    <option>Opción 1</option>
                    <option>Opción 2</option>
                </select>
                <select class="select">
                    <option>Bodegas</option>
                    <option>Opción A</option>
                    <option>Opción B</option>
                </select>
                <select class="select">
                    <option>Historial</option>
                    <option>Item X</option>
                    <option>Item Y</option>
                </select>
                <img src="/img/campana.png" type="button" class="campana" id="campana" href="#">
            </div>
        </nav>

        <!-- Contenido principal -->
        <div class="content-segundario">
            <!-- Tabla -->
            <div class="cont-segun-formu">
                <div class="table-header">Filtros</div>

                <div class="filtros">
                    <select class="desple">
                        <option>Seleccione la Bodega</option>
                        <option>Corte</option>
                        <option>Inyección</option>
                        <option>Preparada</option>
                        <option>Montaje</option>
                        <option>Terminada</option>
                    </select>
                    <input type="date" class="date" placeholder="Fecha">
                    <button type="button" class="export">Exportar Datos a Excel</button>
                </div>

                <div class="table-row1-1">
                    <span>Historial De Bodegas</span>
                </div>

                <div class="table-row1">
                    <span>Nombre</span>
                    <span>Producto SKU</span>
                    <span>Fecha</span>
                    <span>Acción</span>
                </div>
                <div class="table-row2">
                    <span>Producto 1</span>
                    <span>SKU12345</span>
                    <span>2023-10-01</span>
                    <span class="table-row2-bot" type="button">
                        <img src="/img/borrar.png" alt="Borrar" class="borrar" href="#">
                    </span>
                </div>
                <div class="table-row2">
                    <span>Producto 2</span>
                    <span>SKU67890</span>
                    <span>2023-10-02</span>
                    <span class="table-row2-bot" type="button">
                        <img src="/img/borrar.png" alt="Borrar" class="borrar" href="#">
                    </span>
                </div>
                <!-- Añadir más filas según sea necesario -->
            </div>
        </div>
    </div>
</body>
</html> 