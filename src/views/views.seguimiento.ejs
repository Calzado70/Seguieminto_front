<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="/css/seguimiento.css" />
    <title>Seguimiento de Movimientos</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
</head>
<body>
    <div class="container">
        <!-- Navbar -->
        <nav class="navbar">
            <img src="/img/Trost_blanco.png" alt="Logo" class="logo">
            <div class="navbar-options">
                <select class="select" id="adminUsuario">
                    <option>Admin-usuario</option>
                    <option value="/usuario">Crear usuarios</option>
                </select>
                <select class="select" id="bodegas">
                    <option>Bodegas</option>
                    <option value="/crear_bodega">Crear Bodegas</option>
                    <option value="/seguimiento">Seguimiento Bodega</option>
                </select>
                <select class="select" id="historial">
                    <option>Historial</option>
                    <option value="/historial">Lista de Historial</option>
                </select>
                
            </div>
        </nav>

        <!-- Contenido principal -->
        <main class="main-content">
            <h1>Movimientos entre Bodegas</h1>

            <!-- Filtros -->
            <form id="filtro-fechas" class="filtro-form">
    <label for="fecha_inicio">Fecha Inicio:</label>
    <input type="datetime-local" id="fecha_inicio" name="fecha_inicio" />

    <label for="fecha_fin">Fecha Fin:</label>
    <input type="datetime-local" id="fecha_fin" name="fecha_fin" />

    <button type="submit">Buscar</button>
</form>

            <!-- Tabla de movimientos -->
            <div class="table-container">
                <table id="tabla-movimientos" class="movimientos-table">
                    <thead>
                        <tr>
                            <th>ID Movimiento</th>
                            <th>Código Producto</th>
                            <th>Bodega Origen</th>
                            <th>Bodega Destino</th>
                            <th>Usuario</th>
                            <th>Cantidad</th>
                            <th>Tipo</th>
                            <th>Observaciones</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí se insertarán las filas dinámicamente -->
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <!-- Script para cargar datos -->
    <script src="/js/seguimiento.js"></script>
</body>
</html>