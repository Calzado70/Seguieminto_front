<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/inventario.css">
  <title>Gestión de Inventario</title>
</head>
<body>

  <h2>Panel de Gestión de Inventario</h2>

  <div class="tabs">
    <div class="tab active" onclick="openTab('inventario')">Inventario por Bodega</div>
    <div class="tab" onclick="openTab('stock')">Stock por Producto</div>
    <div class="tab" onclick="openTab('movimientos')">Movimientos</div>
    <div class="tab" onclick="openTab('detalle')">Detalle de Sesión</div>
  </div>

  <!-- Inventario -->
  <div id="inventario" class="tab-content active">
    <h3>Consultar Inventario</h3>
    <input type="number" id="inv_bodega" placeholder="ID de la Bodega" />
    <button onclick="consultarInventario()">Consultar</button>
    <pre id="inv_resultado"></pre>
  </div>

  <!-- Stock -->
  <div id="stock" class="tab-content">
    <h3>Consultar Stock de Producto</h3>
    <input type="text" id="stock_codigo" placeholder="Código del Producto" />
    <button onclick="consultarStock()">Consultar</button>
    <pre id="stock_resultado"></pre>
  </div>

  <!-- Movimientos -->
  <div id="movimientos" class="tab-content">
    <h3>Consultar Movimientos</h3>
    <input type="number" id="mov_bodega" placeholder="ID de la Bodega" />
    <input type="date" id="mov_inicio" />
    <input type="date" id="mov_fin" />
    <button onclick="consultarMovimientos()">Consultar</button>
    <pre id="mov_resultado"></pre>
  </div>

  <!-- Detalle de Sesión -->
  <div id="detalle" class="tab-content">
    <h3>Obtener Detalle de Sesión</h3>
    <input type="number" id="detalle_sesion" placeholder="ID de la Sesión" />
    <button onclick="consultarDetalleSesion()">Consultar</button>
    <pre id="detalle_resultado"></pre>
  </div>

  <script src="/js/inventario.js"></script>

</body>
</html>
