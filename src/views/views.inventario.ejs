<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestión de Inventario</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/inventario.css">
</head>
<body>

<div class="admin-container">

  <!-- SIDEBAR -->
  <aside class="sidebar">
    <div class="logo-container">
      <img src="/img/Trost_blanco.png" class="logo">
    </div>

    <nav class="sidebar-nav">

      <div class="nav-section">
        <h3 class="nav-section-title">USUARIOS</h3>
        <select class="nav-select" id="adminUsuario">
          <option value="">Admin-usuario</option>
          <option value="/usuario">Crear usuarios</option>
        </select>
      </div>

      <div class="nav-section">
        <h3 class="nav-section-title">BODEGAS</h3>
        <select class="nav-select" id="bodegas">
          <option value="">Bodegas</option>
          <option value="/crear_bodega">Crear Bodegas</option>
          <option value="/seguimiento">Seguimiento Bodega</option>
          <option value="/inventario">Inventario de Bodegas</option>
        </select>
      </div>

      <div class="nav-section">
        <h3 class="nav-section-title">HISTORIAL</h3>
        <select class="nav-select" id="historial">
          <option value="">Historial</option>
          <option value="/historial">Lista de Historial</option>
          <option value="/logistica">Producto en Logística</option>
        </select>
      </div>

    </nav>

    <div class="user-profile">
      <i class="fas fa-user-circle"></i>
      <div>
        <span id="currentUserName">Usuario</span><br>
        <span id="currentUserRole">Rol</span>
      </div>
    </div>
  </aside>

  <!-- CONTENIDO -->
  <main class="main-content">

    <header class="content-header">
      <h1><i class="fas fa-boxes"></i> Gestión de Inventario</h1>
    </header>

    <section class="inventory-section card">

      <div class="inventory-controls">

        <div class="form-group">
          <label>Bodega</label>
          <select id="nombre_bodega" class="form-control">
            <option value="">-- Seleccione --</option>
          </select>
        </div>

        <div class="form-group">
          <label>Buscar por código</label>
          <input
            type="text"
            id="buscarCodigo"
            class="form-control"
            placeholder="Ej: ABC123"
          />
        </div>

        <button class="btn-primary" onclick="consultarInventario()">
          <i class="fas fa-search"></i> Consultar
        </button>

      </div>

      <div class="table-container">
        <table id="tablaInventario" class="data-table">
          <thead>
            <tr>
              <th>Bodega</th>
              <th>Código</th>
              <th>Talla</th>
              <th>Disponible</th>
              <th>Característica</th>
              <th>Actualización</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>

        <div id="empty-state" class="empty-state">
          <i class="fas fa-box-open"></i>
          <p>Seleccione una bodega y consulte el inventario</p>
        </div>
      </div>

      <div id="mensajeInventario"></div>

    </section>
  </main>

</div>

<script src="/js/inventario.js"></script>
</body>
</html>
