<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/inventario.css">
  <title>Gestión de Inventario</title>
</head>
<body>

  <h2>Panel de Gestión de Inventario</h2>

  <div class="tabs">
    <div class="tab active" onclick="openTab('inventario')">Inventario por Bodega</div>
  </div>

  <!-- Inventario -->
<div id="inventario" class="tab-content active">
  <h3>Consultar Inventario</h3>
  <select id="nombre_bodega">
  <option value="">Seleccione una bodega</option>
</select>
<button onclick="consultarInventario()">Consultar</button>

  <table id="tablaInventario" border="1" style="margin-top: 20px; display: none;">
    <thead>
      <tr>
        <th>Código</th>
        <th>Característica</th>
        <th>Cantidad Disponible</th>
        <th>Cantidad Reservada</th>
        <th>Fecha Actualización</th>
      </tr>
    </thead>
    <tbody></tbody>
  </table>

  <p id="mensajeInventario" style="margin-top: 10px; color: red;"></p>
</div>


  <script src="/js/inventario.js"></script>

</body>
</html>
