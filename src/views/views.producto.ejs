<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/producto.css" />
    <title>Supervisor</title>
  </head>
  <body>
    <div class="container">
      <!-- Navbar -->
      <nav class="navbar">
        <img src="/img/Trost_blanco.png" alt="Logo" class="logo" />
      </nav>

      <!-- Modal para confirmar la contraseña -->
      <div class="modal" id="modalConfirmarContrasena">
        <div class="modal-content">
          <h3>Confirmar Eliminación</h3>
          <p>Ingresa tu contraseña para la eliminación del Registro:</p>
          <input
            type="password"
            id="inputContrasena"
            class="modal-input"
            placeholder="Contraseña"
          />
          <div class="modal-buttons">
            <button
              class="modal-button modal-button-cancel"
              id="cancelarEliminacion"
            >
              Cancelar
            </button>
            <button
              class="modal-button modal-button-confirm"
              id="confirmarEliminacion"
            >
              Confirmar
            </button>
          </div>
        </div>
      </div>

      <!-- Modal para movimiento de productos -->
      <div class="modal" id="modalMovimiento" style="display: none">
        <div class="modal-content">
          <h3>Mover Producto</h3>
          <p>Confirma el movimiento del producto:</p>
          <div class="movimiento-info">
            <p>
              <strong>Producto:</strong> <span id="productoMovimiento"></span>
            </p>
            <p><strong>Desde:</strong> <span id="bodegaOrigen"></span></p>
            <p><strong>Hacia:</strong> <span id="bodegaDestinoSpan"></span></p>
            <p><strong>Tipo:</strong> <span id="tipoMovimiento"></span></p>
          </div>
          <textarea
            id="observaciones"
            class="modal-input"
            placeholder="Observaciones (opcional)"
            rows="3"
          ></textarea>
          <div class="modal-buttons">
            <button
              class="modal-button modal-button-cancel"
              id="cancelarMovimiento"
            >
              Cancelar
            </button>
            <button
              class="modal-button modal-button-confirm"
              id="confirmarMovimiento"
            >
              Confirmar Movimiento
            </button>
          </div>
        </div>
      </div>

      <!-- Modal para editar producto -->
      <div class="modal" id="modalEditarProducto" style="display: none">
        <div class="modal-content">
          <h3>Editar Producto</h3>
          <p>Modifica los detalles del producto:</p>
          <input
            type="number"
            id="editIdProducto"
            class="modal-input"
            placeholder="ID Producto"
            readonly
            disabled
          />
          <input
            type="text"
            id="editCodigo"
            class="modal-input"
            placeholder="Nuevo Código"
            required
          />
          <input
            type="number"
            id="editCantidad"
            class="modal-input"
            placeholder="Nueva Cantidad"
            required
          />
          <div class="modal-buttons">
            <button
              class="modal-button modal-button-cancel"
              id="cancelarEdicion"
            >
              Cancelar
            </button>
            <button
              class="modal-button modal-button-confirm"
              id="confirmarEdicion"
            >
              Confirmar Edición
            </button>
          </div>
        </div>
      </div>

      <!-- Contenido principal -->
      <div class="content-segundario">
        <div class="escrito">
          <h2 class="h2">Movimientos</h2>
          <div class="cont-segun-list">
            <!-- Formulario -->
            <div class="cont-segun-list-for">
              <input
                type="text"
                class="input"
                id="usuario"
                placeholder="usuario"
                disabled
              />
              <input
                type="text"
                class="input"
                id="bodegaActual"
                placeholder="Bodega Actual"
                disabled
              />
              <div class="input-group">
                <select id="id_bodega" required class="input">
                  <option value="">Seleccione bodega</option>
                  <!-- Las opciones se cargarán desde JS -->
                </select>
              </div>
              <select class="desple" id="tipoMovimientoSelect">
                <option value="">Tipo de Movimiento</option>
                <option value="En proceso">Proceso</option>
                <option value="Enviado">Enviado</option>
                <option value="Terminado">Terminado</option>
              </select>
            </div>
          </div>
        </div>
        <!-- Tabla -->
        <div class="cont-segun-formu">
          <div class="table-header">Productos registrados</div>
          <div class="table-row1">
            <span>Código</span>
            <span>Bodega</span>
            <span>Cantidad</span>
            <span>Fecha</span>
            <span>Acción</span>
          </div>
          <!-- FILAS DINÁMICAS -->
        </div>
      </div>
    </div>
    <script src="/js/producto.js"></script>
  </body>
</html>
